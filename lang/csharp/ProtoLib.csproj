<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
  </PropertyGroup>
 <ItemGroup>
    <PackageReference Include="Google.Protobuf" Version="3.8.0" />
    <PackageReference Include="Grpc" Version="2.23.0" />
    <PackageReference Include="Grpc.Tools" Version="2.23.0" PrivateAssets="All" />
  </ItemGroup>

  <ItemGroup>
    <Protobuf Include="../../core/*.proto"/>
    <Protobuf Include="../../services/engine/*.proto" AdditionalImportDirs="../../core/"/>
    <Protobuf Include="../../services/scenario/*.proto" AdditionalImportDirs="../../core/" />
  </ItemGroup>

</Project>
